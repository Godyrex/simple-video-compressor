{
  "name": "simple-video-compressor",
  "version": "1.0.0",
  "description": "Compress your videos with ease using FFmpeg",
  "main": "dist/main/index.js",
  "author": "Oussema Ouakad",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && tsc && cross-env NODE_ENV=development electron .",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.json",
    "build": "npm run build:main && npm run build:renderer && electron-builder",
    "build:win": "npm run build:main && npm run build:renderer && electron-builder --win",
    "build:portable": "npm run build:main && npm run build:renderer && electron-builder --win portable",
    "build:dir": "npm run build:main && npm run build:renderer && electron-builder --dir",
    "start": "electron ."
  },
  "keywords": [
    "electron",
    "video",
    "compressor",
    "ffmpeg"
  ],
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "ffmpeg-static": "^5.2.0",
    "fs-extra": "^11.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.5.1",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.2.0",
    "cross-env": "^10.1.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.5.6",
    "vite": "^5.1.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.videocompressor.simplevideocompressor",
    "productName": "Simple Video Compressor",
    "copyright": "Copyright Â© 2025",
    "compression": "maximum",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "!node_modules/**/{CHANGELOG.md,README.md,readme.md,*.md}",
      "!node_modules/*/{test,__tests__,tests,*.test.js,*.spec.js}",
      "!**/*.map"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/**"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Simple Video Compressor",
      "artifactName": "${productName}-${version}-Setup.${ext}"
    }
  }
}
